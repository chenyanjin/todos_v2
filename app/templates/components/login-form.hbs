{{! app/templates/components/login-form.hbs }}

<!-- 页面顶部的登录提示，只要控制显隐状态即可  -->
<div class="ns-box ns-bar ns-effect-exploader ns-type-notice ns-show" style="{{showOrHide}}" id="login-tip">
<div class="ns-box-inner">
{{#if errorMessage}}
{{errorMessage}}
{{/if}}
</div>
<span class="ns-close" {{action 'hideTipOnChange'}}></span>
</div>

<form {{action 'authenticate' on='submit'}} id="form-signin" class="form-signin">
  <section>
    <div class="input-group">
      {{input type="text" class="form-control" value=username placeholder="请输入登录名" key-press="hideTipOnChange" }}
      <div class="input-group-addon"><i class="fa fa-user"></i></div>
    </div>
    <div class="input-group">
      {{input type="password" class="form-control" value=password 
        placeholder="请输入密码" key-press="hideTipOnChange" }}
      <div class="input-group-addon"><i class="fa fa-key"></i></div>
    </div>
  </section>
  <section class="controls" style="padding-top: 10px;">
    <!-- <div class="checkbox check-transparent">
      <input type="checkbox" value="1" id="remember" checked>
      <label for="remember">Remember me</label>
    </div> -->
    
    <a href="#" style="color: white;">忘记密码</a>
  </section>
  
  <button class="btn btn-greensea" type="submit" id="loginButton">
    登录</button> 
    <span>or</span>
    {{#link-to 'register'class="btn btn-slategray"}}创建新账号{{/link-to}}
  
</form>


<section class="log-in">
 <button class="btn btn-slategray">新浪微博登录</button>
 <button class="btn btn-slategray">QQ登录</button>
 <button class="btn btn-slategray">Github登录</button>
</section>
